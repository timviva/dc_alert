<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:textAlignment="center"
    >

    <TextView
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="16dp"
        android:id="@+id/MtVname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:background="@color/red"



        />


    <TextView
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/purple_700"
        android:padding="16dp"
        android:id="@+id/MtvEmaiL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />

    <TextView
        android:textSize="17sp"
        android:textAlignment="center"
        android:id="@+id/MtvCrimeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#347"
        android:padding="16dp"
        android:text="Crime Description"
        android:textColor="@color/white" />

    <TextView
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D3AC1"
        android:padding="16dp"
        android:id="@+id/MtvCrimePlace"
        android:text="Crime Place" />

    <TextView
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#B70EDD"
        android:padding="16dp"
        android:id="@+id/MtvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date" />

    <TextView
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#E91E63"
        android:padding="16dp"
        android:id="@+id/MtvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time" />

        />
</LinearLayout>