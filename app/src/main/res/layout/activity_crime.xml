<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CrimeActivity">


    <ListView
        android:id="@+id/MlistCrime"
        android:layout_width="408dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MtvCrimeView" />

    <Button
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:id="@+id/MbtnDisasters"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/round_bg"
        android:text="Disasters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/MtvCrimeView"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="View Crimes Here"
        app:layout_constraintBottom_toTopOf="@+id/MlistCrime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>